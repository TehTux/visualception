{
  "name": "tehtux/module-visualception",
  "description": "Visual regression tests for Codeception",
  "type": "library",
  "homepage": "https://github.com/TehTux/visualception",
  "license": "Apache-2.0",
  "require": {
    "php": ">=8.0",
    "ext-imagick": "*",
    "ext-mbstring": "*",
    "ext-zip": "*",
    "ext-xml": "*",
    "codeception/codeception": "^5.0",
    "codeception/module-webdriver": "^3.2 || ^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "classmap": [
      "src/",
      "tests/unit/Codeception/Module/TestCestExample.php"
    ]
